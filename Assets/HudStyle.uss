.hud-screen {
    flex-grow: 1;
    flex-shrink: 1;
    align-items: flex-start;
    flex-basis: auto;
    position: relative;
    left: auto;
    right: auto;
    top: auto;
    bottom: auto;
    justify-content: center;
    align-self: stretch;
    background-image: none;
}

.cross-icon {
    flex-grow: 1;
    width: 50px;
    height: 100%;
    min-height: 100px;
    min-width: 100px;
    justify-content: center;
    align-items: center;
    align-self: center;
}

